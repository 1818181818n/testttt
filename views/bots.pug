  .main-bot-sec{
    display: flex;
    align-items: center;
    background-color: #161625;
    padding: 12px;
    border-radius: 5px;
    margin-bottom: 1%;
  }
  .main-bot-sec h4 {
      margin-right: 30%;
  }
  .main-bot-sec button {
      margin-left: 40%;
  }






